@model IEnumerable<ApplicationDev.Models.AssignTrainerToCourse>
@using ApplicationDev.Utils;
@{
    ViewBag.Title = "Index";
}

<h2>Trainee Course</h2>


@if (User.IsInRole(Role.Manager))
{
    @Html.ActionLink("Assign Trainer to Course", "Create")


    <table class="table">
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Course </th>
            <th>Delete</th>


        </tr>
        @foreach (var assign in Model)
        {
            <tr>
                <th>@assign.Trainer.Email</th>
                <th>@assign.Trainer.UserName</th>
                <th>@assign.Course.Name</th>
                <th>@Html.ActionLink("Delete", "Delete", new { id = assign.ID })</th>

            </tr>
        }
    </table>
}
@if (User.IsInRole(Role.Trainer))
{
    <table class="table">
        <tr>

            <th>Course</th>
        </tr>

        @foreach (var assign in Model)
        {
            <tr>
                <td>@assign.Course.Name</td>
            </tr>
        }
    </table>
}

@Html.ActionLink("Back to home", "Index", "Home")